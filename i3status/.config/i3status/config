# i3status configuration file.
# see "man i3status" for documentation.

# it is important that this file is edited as utf-8.
# the following line should contain a sharp s:
# ß
# if the above line is not correctly displayed, fix your editor first!

general {
	colors = false
	interval = 2
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
	format_up = "󰤨 %quality at %essid %bitrate %ip"
	format_down = "󰤯"
}

ethernet _first_ {
	format_up = "󰈁 %ip %speed"
	format_down = "󰈂"
}

battery all {
	format = "%status %percentage"
	status_chr = "󰂄"
	status_bat = "󰂀"
	status_full = "󱟢"
	status_unk = "󰂑"
	low_threshold = 10
}

volume master {
	format = " %volume"
	format_muted = "󰖁 (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
	format = "%a %d %b | %H:%M |"
}
